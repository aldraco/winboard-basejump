div(ng-include='"components/navbar/navbar.html"')

header#banner.hero-unit
  .container
    h1 WINTEREST
    p.lead Who needs pins whens you have wins?
    img(src='assets/images/yeoman.png', alt='I\'m Yeoman')

.container
  .row
    .col-lg-12
      h1.page-header Recent wins:
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='win in recentWins')
        li
          a(href='#', tooltip='{{win.info}}')
            | {{win.name}}
            button.close(type='button', ng-click='deleteWin(win)') Ã—

  form.thing-form
    label Everyone sees your wins!
    p.input-group
      input.form-control(type='text', placeholder='Add a new win here.', ng-model='newWin')
      span.input-group-btn
        button.btn.btn-primary(type='submit', ng-click='addWin()') Add New

