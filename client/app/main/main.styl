.win-form
    margin 20px 0

#banner
    border-bottom none
    

#banner h1
    font-size 60px
    letter-spacing -1px
    line-height 1

.hero-unit
    background #91074C
    color rgba(222, 250, 16, 0.88)
    padding 30px 15px
    position relative
    text-align center
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)
    z-index 0
  
.background-contrast-panel
  background-color rgba(1,1,1,.3)
  height 100%
  position relative
  width 50%
  float right
  z-index 2
 
#social-button-bar
  position absolute
  right 0
  background-color rgba(120,92,132,.4)
  padding 40px
  box-shadow 0 1px 2px rgba(1,1,1,.3)
  width 100%
  @media mobile
    top 160px
  @media medSize
    padding 0
    top 380px
  @media lgSize
    top 450px
    padding-top 20px
  .btn 
    padding 10px 30px
    box-shadow 1px 1px 2px rgba(1,1,1,.4)
    margin 10px
    @media mobile
      font-size 2.2em
    @media medSize
      font-size 2.5em
  .col-md-10
    font-size 1.3em
    padding 10px
    margin-top 20px
  p.lead
    @media mobile
      font-size 2em
    
    
#hero-picture
  width 100%
  background-image url('/assets/images/parkour.jpg')
  background-size cover
  height 700px
  margin-top -20px
  padding 0
  z-index 1
  @media mobile
    height 800px
    background-position-x -150px
  @media medSize
    height 700px
    background-position-x 0
  h1
    font-size 15em
    word-break break-word
    width 90%
    color #91074C
    line-height .8em
    z-index 3
    position absolute
    top 75px
    margin-left 10px
    @media mobile
      font-size 4em
      line-height 1em
      top 15px
    @media medSize
      font-size 10em
      line-height 1em
    @media lgSize
      font-size 13em
  p 
    position absolute
    top 450px
    padding 15px
    font-size 2em
    left 5px
    @media mobile
      position relative
      top 165px
    @media medSize
      top 400px
    @media lgSize
      top 450px
    
masonry
  padding 10px
    
.featurette
  background-color white
  color #222
  padding 20px
  margin 0 auto
  width 100%
  margin-top 20px
  

.footer
    border-top 1px solid #E5E5E5
    margin-top 70px
    padding 30px 0
    text-align center
iframe
  width 100%
  min-height 300px
    