body
  font-family 'Lato' sans-serif

.win-form
    margin 20px 0

#banner
    border-bottom none
    

#banner h1
    font-size 60px
    letter-spacing -1px
    line-height 1

.hero-unit
    background #91074C
    color rgba(222, 250, 16, 0.88)
    padding 30px 15px
    position relative
    text-align center
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)
    z-index 0
  
.background-contrast-panel
  background-color rgba(1,1,1,.3)
  height 100%
  position relative
  width 50%
  float right
  z-index 2
 
#social-button-bar
  position absolute
  top 490px
  right 0
  background-color rgba(120,92,132,.4)
  padding 40px
  box-shadow 0 1px 2px rgba(1,1,1,.3)
  .btn 
    padding 10px 30px
    box-shadow 1px 1px 2px rgba(1,1,1,.4)
  .col-md-10
    font-size 1.3em
    padding 10px
    margin-top 20px
    
    
#hero-picture
  width 100%
  background-image url('/assets/images/parkour.jpg')
  background-size cover
  height 700px
  margin-top -20px
  padding 0
  z-index 1
  h1
    font-size 15em
    word-break break-word
    width 90%
    color #91074C
    line-height .8em
    z-index 3
    position absolute
    top 75px
    margin-left 10px
  p 
    position absolute
    top 450px
    width 35%
    padding 15px
    font-size 2em
    left 5px
    
masonry
  padding 10px
    
.featurette
  background-color white
  color #222
  padding 20px
  margin 0 auto
  width 100%
  margin-top 20px
  

.footer
    border-top 1px solid #E5E5E5
    margin-top 70px
    padding 30px 0
    text-align center